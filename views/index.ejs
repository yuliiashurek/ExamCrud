<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Exam Records</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container">
    <h1 class="mt-5">Exam Records</h1>
    <a href="/new" class="btn btn-success mb-3">Add Exam Record</a>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>â„–</th>
            <th>Last Name</th>
            <th>Group</th>
            <th>Subject</th>
            <th>Ticket Number</th>
            <th>Grade</th>
            <th>Instructor</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <% examRecords.forEach(function(examRecord, index) { %>
            <tr>
                <td><%= index + 1 %></td>
                <td><%= examRecord.lastName %></td>
                <td><%= examRecord.group %></td>
                <td><%= examRecord.subject %></td>
                <td><%= examRecord.ticketNumber %></td>
                <td><%= examRecord.grade %></td>
                <td><%= examRecord.instructor %></td>
                <td>
                    <a href="/edit/<%= examRecord._id %>" class="btn btn-warning">Edit</a>
                    <form action="/delete/<%= examRecord._id %>" method="POST" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        <% }) %>
        </tbody>
    </table>
</div>
</body>
</html>
